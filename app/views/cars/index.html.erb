<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<h3>Filtrar por:</h3>

<h3>Marca: </h3>
<% Brand.all.each_with_index do |b, index| %>
  <%= link_to b.name, cars_path(:brand_id => b.id) %>
  <% if (index + 1) != Brand.all.count %>
    <strong>|</strong>
  <% end -%>
<% end -%>

<h3>Clase:</h3>
<% Carclass.all.each_with_index do |b, index| %>
  <%= link_to b.name, cars_path(:carclass_id => b.id) %>
  <% if (index + 1) != Carclass.all.count %>
    <strong>|</strong>
  <% end -%>
<% end -%>

<h3>Estilo:</h3>
<% CarStyle.all.each_with_index do |b, index| %>
  <%= link_to b.name, cars_path(:car_style_id => b.id) %>
  <% if (index + 1) != CarStyle.all.count %>
    <strong>|</strong>
  <% end -%>
<% end -%>

<table>
  <thead>
    <tr>
      <th>Doors</th>
      <th>Color</th>
      <th>Model</th>
      <th>Year</th>
      <th>Brand</th>
      <th>Class</th>
      <th>Style</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.doors %></td>
        <td><%= car.color %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.brand.name unless car.brand.nil? %></td>
        <td><%= car.carclass.name unless car.carclass.nil? %></td>
        <td><%= car.car_style.name unless car.car_style.nil? %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

