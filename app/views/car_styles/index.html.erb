<h1>Styles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_styles.each do |car_style| %>
      <tr>
        <td><%= car_style.name %></td>
        <td><%= link_to 'Show', car_style %></td>
        <td><%= link_to 'Edit', edit_car_style_path(car_style) %></td>
        <td><%= link_to 'Destroy', car_style, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

